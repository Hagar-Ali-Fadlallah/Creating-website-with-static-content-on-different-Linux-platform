---
- hosts: all
  become: true
  tasks:
  - name: update repo and install package on ubuntu disro
    apt:
      name:
        - apache2
        - libapache2-mod-php
      state: latest
      update_cache: yes
    when: ansible_distribution == "Ubuntu"

  - name: update repo and install package redhat disro
    dnf:
      name:
        - httpd
        - php
      state: latest
    when: ansible_distribution == "Redhat"

  - name: start and enable httpd service
    service:
      name: httpd
      state: started
      enabled: yes
    when: ansible_distribution == "Redhat"

